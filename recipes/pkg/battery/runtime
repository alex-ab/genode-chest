<runtime ram="30M" caps="810" binary="init">

	<requires>
		<!-- menu_view and battery tool -->
		<gui/>
		<file_system label="fonts" writeable="no"/>

		<!-- acpica -->
		<io_mem/>
		<io_port/>
		<platform/>
		<rom label="platform_info"/>
		<rom label="system"/>
		<report/>
		<timer/>
	</requires>

	<config>

		<default-route> <any-service> <parent/> </any-service> </default-route>

		<parent-provides>
			<service name="PD"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="ROM"/>
			<service name="File_system"/>
			<service name="Gui"/>
			<service name="Timer"/>

			<!-- ACPICA -->
			<service name="Platform"/>
			<service name="IO_PORT"/>
			<service name="IO_MEM"/>
			<service name="Report"/>
		</parent-provides>

		<start name="report_rom" caps="100">
			<resource name="RAM" quantum="1M"/>
			<provides> <service name="Report"/> <service name="ROM"/> </provides>
			<config verbose="no">
				<policy label="menu_view -> dialog" report="battery -> dialog"/>
				<policy label="battery -> hover" report="menu_view -> hover"/>
				<policy label="battery -> acpi_battery" report="acpica -> acpi_battery"/>
			</config>
		</start>

		<start name="menu_view" caps="200">
			<binary name="menu_view_ab"/>
			<resource name="RAM" quantum="15M"/>
			<config xpos="200" ypos="100">
				<report hover="yes"/>
				<libc stderr="/dev/log"/>
				<vfs>
					<tar name="menu_view_styles.tar" />
					<dir name="dev"> <log/> </dir>
					<dir name="fonts"> <fs label="fonts"/> </dir>
				</vfs>
			</config>
			<route>
				<service name="ROM" label="dialog"> <child name="report_rom" /> </service>
				<service name="Report" label="hover"> <child name="report_rom"/> </service>
				<service name="File_system" label="fonts"> <parent label="fonts"/> </service>
				<any-service> <parent/> <any-child/> </any-service>
			</route>
		</start>

		<start name="battery" caps="100">
			<resource name="RAM" quantum="2M"/>
			<config period_ms="2000" report="yes" log="no"/>
			<route>
				<service name="ROM" label="hover"> <child name="report_rom" /> </service>
				<service name="ROM" label="acpi_battery"> <child name="report_rom" /> </service>
				<service name="Report"> <child name="report_rom" /> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>

		<start name="acpica" caps="300">
			<resource name="RAM" quantum="10M"/>
			<config reset="yes" poweroff="yes" report="yes" report_period_ms="20000" use_gpe="false"/>
			<route>
				<service name="Report" label="acpi_battery"> <child name="report_rom" /> </service>
				<service name="ROM" label="platform_info"> <parent label="platform_info"/> </service>
				<service name="ROM" label="system"> <parent label="system"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="libpng.lib.so"/>
		<rom label="zlib.lib.so"/>
		<rom label="menu_view_styles.tar"/>
		<rom label="menu_view_ab"/>
		<rom label="init"/>
		<rom label="battery"/>
		<rom label="report_rom"/>
		<rom label="acpica"/>
	</content>

</runtime>
